<%layout("/layouts/boilerplate.ejs")%>
<h2>ADD New Menu</h2>
<body>
  <form method="POST" action="/menu/new" novalidate class="needs-validation" enctype="multipart/form-data">
    <div>
      <label for="name" class="form-label">Name:</label>
      <input id="name" name="menu[name]" class="form-control" type="text" placeholder="enter name" required/>
      <div class="valid-feedback">looks great!</div>
    </div>
    <br/><br />
    <div>
      <label for="image" class="form-label">Image:</label>
      <input id="image" name="menu[image]"  placeholder="enter imagel link/url"  class="form-control" type="file" required/>
      <div class="invalid-feedback">enter the valid url/link!</div>
    </div>
    <br /><br />
    <div>
      <label for="price" class="form-label">price:</label>
      <input id="price" name="menu[price]" type="number" class="form-control" placeholder="enter price" required />
      <div class="valid-feedback">enter the title!</div>
    </div>
    <br /><br />
    <div>
      <label for="category" class="form-label">Category:</label>
      <input name="menu[category]" type="text" placeholder="enter category" class="form-control"id="category" required></input>
      <div class="valid-feedback">write diary!</div>
    </div>
    <div>
        <br/><br/>
        <label for="availability" class="form-label">Availability:</label>
        <input name="menu[availability]" type="text" placeholder="enter availability" class="form-control"id="availability" required></input>
        <div class="invalid-feedback">enter availability</div>
      </div>
    <br /><br/>
    <button class="btn btn-primary">ADD Menu</button>
    
  </form>
  <br/>
</body>